<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('includes/head', { title: "Confirm Delete" }) %>
    <link rel="stylesheet" href="/styles/posts.css" />
  </head>

  <body>
    <aside id="confirm-delete">
      <div class="container">
        <p>Do you Really Want to Delete?</p>
        <div class="btn-container">
          <a class="btn btn-alt" href="/posts">Cancel</a>
          <form action="/delete-post/<%=post.id%>" method="post">
            <input type="hidden" name="author_id" value="<%=post.author_id%>" />
            <button class="btn btn-delete">Delete</button>
          </form>
        </div>
      </div>
    </aside>

    <div id="backdrop"></div>

    <%- include('includes/header') %>
    <main id="post-detail">
      <h1><%= post.title%></h1>
      <section id="post-meta">
        <address>
          <a href="mailto:<%= post.email%>"><%= post.author %></a>
        </address>
        <time datetime="<%= post.date%>">
          <!--  -->
          <%= post.humanReadableDate%>
        </time>
      </section>

      <hr />
      <section>
        <p><strong>Summary:</strong> <%= post.summary%></p>
        <p id="body"><%= post.body%></p>
      </section>
    </main>
  </body>
</html>
