<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../includes/head' , {title: 'Sign-Up'}) %>
    <link rel="stylesheet" href="/public/styles/forms.css" />
    <link rel="stylesheet" href="/public/styles/auth.css" />
  </head>

  <body>
    <%- include('../includes/header') %>

    <main>
      <h1>Create New Account</h1>
      <form action="/signup" method="POST">
        <input type="hidden" name="_csrf" value="<%=locals.csrfToken%>" />

        <section id="flash-error">
          <% if (sessionData.message) { %>
          <p><%=sessionData.message%></p>
          <% } %>
        </section>

        <section>
          <p>
            <label for="first-name">First Name</label>
            <input
              value="<%=sessionData['first-name']%>"
              type="text"
              name="first-name"
              id="first-name"
              required
            />
          </p>
          <p>
            <label for="last-name">Last Name</label>
            <input
              value="<%=sessionData['last-name']%>"
              type="text"
              name="last-name"
              id="last-name"
              required
            />
          </p>
          <p>
            <label for="email">Email</label>
            <input
              value="<%=sessionData['email']%>"
              type="email"
              name="email"
              id="email"
              required
            />
          </p>
          <p>
            <label for="password">Password</label>
            <input
              type="password"
              name="password"
              id="password"
              required
              minlength="6"
              value="<%=sessionData['password']%>"
            />
          </p>
          <p>
            <label for="confirm-password">Confirm Password</label>
            <input
              type="password"
              name="confirm-password"
              id="confirm-password"
              required
              minlength="6"
              value="<%=sessionData['confirm-password']%>"
            />
          </p>
        </section>
        <hr />
        <section>
          <p>
            <label for="house">House No.</label>
            <input
              value="<%=sessionData['house']%>"
              type="text"
              name="house"
              id="house"
              required
            />
          </p>
          <p>
            <label for="street">Street</label>
            <input
              value="<%=sessionData['street']%>"
              type="text"
              name="street"
              id="street"
              required
            />
          </p>
          <p>
            <label for="postal">Postal Code</label>
            <input
              value="<%=sessionData['postal']%>"
              type="text"
              name="postal"
              id="postal"
              required
            />
          </p>
          <p>
            <label for="city">City</label>
            <input
              value="<%=sessionData['city']%>"
              type="text"
              name="city"
              id="city"
              required
            />
          </p>
          <p>
            <label for="country">Country</label>
            <input
              value="<%=sessionData['country']%>"
              type="text"
              name="country"
              id="country"
              required
            />
          </p>
        </section>
        <div id="actions">
          <button type="submit" class="btn">Create Account</button>
          <p id="switch-form">
            <a href="/login">Login Instead</a>
          </p>
        </div>
      </form>
    </main>
  </body>
</html>
