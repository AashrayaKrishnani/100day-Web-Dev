<article class="post-item">
  <h2><%= post.title %></h2>
  <p class="post-item-author">By <%= post.author.name %></p>
  <p><strong>Summary:</strong> <%= post.summary %></p>
  <div class="post-actions">
    <form action="/posts/<%=post._id%>/delete" method="GET">
      <input type="hidden" name="author_id" value="<%=post.author._id%>" />
      <button class="a">Delete Post</button>
    </form>

    <form action="/posts/<%=post._id %>/edit" method="GET">
      <button class="a">Edit Post</button>
      <input type="hidden" name="author_id" value="<%=post.author._id%>" />
    </form>

    <a class="btn" href="/posts/<%= post._id %>">View Post</a>
  </div>
</article>
