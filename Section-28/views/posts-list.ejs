<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('includes/head', { title: 'Posts!' }) %>
    <link rel="stylesheet" href="/styles/posts.css" />
  </head>

  <body>
    <%- include('includes/header') %>
    <main id="all-posts">
      <h1>All Posts</h1>

      <% if (!posts || posts.length == 0) { %>

      <p>No Posts Found - Consider adding one.? ><</p>
      <a class="btn" href="/new-post">Ok! :)</a>

      <% }else { %>

      <ul id="posts-list">
        <% posts.forEach(post => { %>
        <!--  -->
        <li><%- include('./includes/post-item', {post: post})%></li>

        <!--  -->
        <% }) %>
      </ul>

      <%}%>
    </main>
  </body>
</html>
