<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>New Profile</title>
    <link rel="stylesheet" href="/styles/base.css" />
    <link rel="stylesheet" href="/styles/profiles.css" />
    <script src="/scripts/new-user.js" defer></script>
  </head>
  <body>
    <main id="new-user">
      <form action="/profiles" method="POST" enctype="multipart/form-data">
        <div class="form-control">
          <div class="form-control">
            <div class="image-picker">
              <img src="" id="image-preview" alt="User-Image-Preview" />
              <input
                type="file"
                name="image"
                id="image"
                required
                accept="image/*"
              />
            </div>
            <div class="vertical-center-flex">
              <input
                class=""
                placeholder="            Username"
                type="text"
                id="username"
                name="username"
                required
              />
            </div>
          </div>
          <div class="vertical-center-flex">
            <button class="btn">Save User</button>
          </div>
        </div>
      </form>
    </main>
  </body>
</html>
